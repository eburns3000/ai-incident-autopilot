# Incident Autopilot Configuration
# Copy this file to .env and fill in your values

# ===========================================
# WEBHOOK SECURITY
# ===========================================
# Secret for validating incoming webhook requests
# Generate with: openssl rand -hex 32
AUTOPILOT_WEBHOOK_SECRET=your-secure-secret-here

# ===========================================
# LLM PROVIDER CONFIGURATION
# ===========================================
# Choose "openai" or "anthropic"
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ===========================================
# JIRA CONFIGURATION
# ===========================================
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token

# ===========================================
# SLACK CONFIGURATION
# ===========================================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#incidents

# ===========================================
# FEATURE FLAGS
# ===========================================
# Set to true to disable actual Jira/Slack API calls
DRY_RUN=true

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ===========================================
# CORRELATION
# ===========================================
# Time window for correlating related incidents (minutes)
CORRELATION_WINDOW_MINUTES=30

# ===========================================
# TIMEOUTS
# ===========================================
# HTTP request timeout in seconds
HTTP_TIMEOUT=30

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=sqlite:///./data/audit.db
AUDIT_JSONL_PATH=./data/audit.jsonl
